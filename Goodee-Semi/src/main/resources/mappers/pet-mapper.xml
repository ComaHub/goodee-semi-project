<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
"-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.goodee.semi.mapper.PetMapper">

	<resultMap id="petResultMap" type="com.goodee.semi.dto.Pet">
		<result property="petNo" column="pet_no" />
		<result property="accountNo" column="account_no" />
		<result property="petName" column="pet_name" />
		<result property="petGender" column="pet_gender" />
		<result property="petAge" column="pet_age" />
		<result property="petBreed" column="pet_breed" />
		<result property="attachNo" column="attach_no" />
		<result property="accountName" column="account_name" />
		<result property="classNo" column="class_no" />
	</resultMap>
	
	<select id="selectPetList" parameterType="com.goodee.semi.dto.Pet" resultMap="petResultMap">
		SELECT *
		FROM pet
		<where>
			account_no = #{accountNo}
		</where>
		LIMIT #{limitPageNo}, #{numPerPage}
	</select>
	
	<select id="selectPetCount" resultType="_int" parameterType="com.goodee.semi.dto.Pet">
		SELECT COUNT(*)
		FROM pet
		<where>
			account_no = #{accountNo}
		</where>
	</select>
	
	<update id="updatePet" parameterType="com.goodee.semi.dto.Pet">
		UPDATE pet
		SET pet_name = #{petName}
		<where>
			account_no = #{accountNo}
			AND pet_no = #{petNo}
		</where>
	</update>
	
	<select id="selectAllPetByCourseNo" parameterType="string" resultMap="petResultMap">
		SELECT 
			p.*, 
			c.course_no, 
			c.class_no AS class_no,
			at.attach_no AS attach_no, 
			a.account_name AS account_name
		FROM pet p
		JOIN class c ON p.pet_no = c.pet_no
		JOIN (
			SELECT account_name, account_no
		    FROM account AS a
		) AS a ON p.account_no = a.account_no
		LEFT JOIN attachment at ON p.pet_no = at.pk_no AND at.type_no = 2
		<where>
		 	course_no = #{courseNo}
		 </where>		
	</select>
	
</mapper>